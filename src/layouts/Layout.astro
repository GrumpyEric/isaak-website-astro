---
import NavbarHeader from "@/components/NavbarHeader";
import { Footer } from "@/components/Footer";
import { colors } from "@/components/constants/colors";
import { MobileDrawer } from "@/components/MobileDrawer";
import { Drawer, Fab, SwipeableDrawer } from "@mui/material";

interface Props {
  title: string;
}

const { title } = Astro.props;
const backgroundColor = colors.background;
const textColor = colors.text;
const accentColor = colors.accent;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Website of Isekku" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavbarHeader client:load />
    <MobileDrawer client:load />
    <slot />
    <Footer client:load />
  </body>
</html>
<style is:global define:vars={{ backgroundColor, textColor, accentColor }}>
  html {
    color: var(--textColor);
    background: var(--backgroundColor);
  }

  html,
  body {
    width: 100%;
    height: 100vh;
    margin: 0;
    overflow: auto;
  }

  @font-face {
    font-family: "Osaka";
    src: url("/fonts/osaka-re.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
